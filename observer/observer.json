{
	"id": "dploy-observer",
	"cpus": 0.5,
	"mem": 200,
	"container": {
		"type": "DOCKER",
		"docker": {
			"image": "mhausenblas/dploy-observer:0.7.1",
			"forcePullImage": true,
			"network": "BRIDGE",
			"portMappings": [
				{
					"containerPort": 8888,
					"hostPort": 0
				}
			]
		}
	},
	"env": {
		"DPLOY_PUBLIC_NODE": "",
		"DPLOY_OBSERVER_GITHUB_PAT": "",
		"DPLOY_OBSERVER_GITHUB_OWNER": "mhausenblas",
		"DPLOY_OBSERVER_GITHUB_REPO": "s4d"
	},
	"acceptedResourceRoles": [
		"slave_public"
	]
}