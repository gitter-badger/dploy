{
	"id": "/dployex/blog2go",
	"cmd": "cp $MESOS_SANDBOX/dploy-master/example/blog2go/site /srv/jekyll && jekyll s",
	"cpus": 0.2,
	"mem": 128,
	"container": {
		"type": "DOCKER",
		"docker": {
			"image": "jekyll/jekyll",
			"network": "BRIDGE",
			"portMappings": [
				{
					"containerPort": 4000,
					"hostPort": 0
				}
			]
		}
	},
	"healthChecks": [
		{
			"protocol": "TCP",
			"gracePeriodSeconds": 600,
			"intervalSeconds": 30,
			"portIndex": 0,
			"timeoutSeconds": 10,
			"maxConsecutiveFailures": 2
		}
	],
	"uris": [
		"https://github.com/mhausenblas/dploy/archive/master.zip"
	],
	"acceptedResourceRoles": [
		"slave_public"
	]
}